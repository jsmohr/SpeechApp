<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_view">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/questionText"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textSize="45dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ansButton1"
        android:background="#000000"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        android:layout_alignTop="@+id/ansButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ansButton2"
        android:background="#000000"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/ansButton1"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ansButton3"
        android:background="#000000"
        android:layout_alignTop="@+id/ansButton2"
        android:layout_toRightOf="@+id/ansButton2"
        android:layout_toEndOf="@+id/ansButton2"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ansButton4"
        android:background="#000000"
        android:layout_alignTop="@+id/ansButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Complete Game"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:layout_alignLeft="@+id/questionText"
        android:layout_alignStart="@+id/questionText" />

</RelativeLayout>